<div data-role="header">	
	{{if smallScreen}}
		<a data-role="button" data-inline="true" data-icon="menu" data-theme="a" data-iconpos="notext" class="mobile-menu-button">Menu</a>
	{{/if}}
	<h1>${title}</h1>
	{{if smallScreen}}
		<div data-role="controlgroup" data-type="horizontal" class="ui-btn-right panel-mobile-sliders">
			<a data-role="button" data-icon="arrow-l" data-iconpos="notext" data-theme="a" data-inline="true" class="panel-previous">Previous Column</a>
			<a data-role="button" data-icon="arrow-r" data-iconpos="notext" data-theme="a" data-inline="true" class="panel-next">Next Column</a>
		</div>
	{{/if}}
</div>
<div data-role="content">
	{{html content}}
</div>
{{if smallScreen}}
	<div class="mobile-content-overlay"></div>
{{/if}}